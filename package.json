{
  "name": "templ-project-nodejs-addon-nan",
  "version": "0.0.2",
  "description": "NodeJs Addon Project Template using NAN",
  "main": "dist/index.js",
  "scripts": {
    "build:dev": "npm run build-gyp -- --debug",
    "build": "npm run build-gyp",
    "build-cmake": "npx cmake-js configure && npx cmake-js build",
    "build-gyp": "npx node-gyp configure && npx node-gyp build",
    "ca:lint": "npm run prettier:write && npm run lint:write",
    "ca:quality": "npm run jscpd && npm run depcruise",
    "ca:security": "npm run license-check && (npm audit || yarn audit --groups=dependencies)",
    "ca": "npm run ca:lint && npm run ca:quality && npm run ca:security",
    "clean": "rimraf build/Release build/Debug coverage",
    "depcruise": "depcruise --config .dependency-cruiser.js src",
    "jscpd:html": "npm run jscpd -- --reporters html",
    "jscpd": "jscpd ./src --blame",
    "license-check": "license-checker --production --json --failOn='AGPL AGPL 1.0; AGPL 3.0; CDDL or GPLv2 with exceptions; CNRI Python GPL Compatible; Eclipse 1.0; Eclipse 2.0; GPL; GPL 1.0; GPL 2.0; GPL 2.0 Autoconf; GPL 2.0 Bison; GPL 2.0 Classpath; GPL 2.0 Font; GPL 2.0 GCC; GPL 3.0; GPL 3.0 Autoconf; GPL 3.0 GCC; GPLv2 with XebiaLabs FLOSS License Exception; LGPL; LGPL 2.0; LGPL 2.1; LGPL 3.0; Suspected Eclipse 1.0; Suspected Eclipse 2.0'",
    "lint:cpp:write": "npm run lint:cpp -- --fix",
    "lint:cpp": "clang-lint",
    "lint:js:write": "npm run lint:js -- --fix",
    "lint:js": "eslint ./{src,test}/**/*.js",
    "lint:watch": "nodemon --exec 'npm run lint'",
    "lint:write": "npm run lint:cpp:write && npm run lint:js:write",
    "lint": "npm run lint:cpp && npm run lint:js",
    "postinstall": "node ./.scripts/clang-link.js",
    "prebuild:dev": "npm run clean",
    "prebuild": "npm run clean",
    "prebuildc:dev": "npm run clean",
    "prebuildc": "npm run clean",
    "prerelease": "npm run build",
    "pretest": "npm run build",
    "prettier:check": "npm run prettier:cpp:check && npm run prettier:js:check",
    "prettier:cpp:check": "npm run prettier:cpp -- -dry-run",
    "prettier:cpp:write": "npm run prettier:cpp -- -i",
    "prettier:cpp": "clang-prettier",
    "prettier:js:check": "npm run prettier:js -- --list-different",
    "prettier:js:write": "npm run prettier:js -- --write",
    "prettier:js": "prettier ./{src,test}/**/*.js",
    "prettier:write": "npm run prettier:cpp:write && npm run prettier:js:write",
    "prettier": "npm run prettier:cpp && npm run prettier:js",
    "release": "release-it --ci --no-npm.publish",
    "sonar": "sonar-scanner",
    "test:junit": "npm run test -- --reporter mocha-junit-reporter --reporter-options mochaFile=.junit.xml",
    "test:single": "cross-env NODE_ENV=test nyc --reporter=html --reporter=lcov --reporter=text --extension .js mocha --forbid-only",
    "test:watch": "npm run test -- --watch",
    "test": "npm run test:single -- './test/**/*.test.js'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/templ-project/node-addon-nan.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/templ-project/node/issues"
  },
  "homepage": "https://github.com/templ-project/node#readme",
  "devDependencies": {
    "@babel/core": "7.14.3",
    "@babel/eslint-parser": "^7.14.3",
    "@babel/preset-env": "7.14.2",
    "@babel/register": "7.13.16",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@jscpd/badge-reporter": "^3.3.23",
    "@release-it/conventional-changelog": "^2.0.1",
    "chai": "^4.3.4",
    "cmake-js": "^6.1.0",
    "cross-env": "^7.0.3",
    "dependency-cruiser": "^10.0.1",
    "docsify-cli": "^4.4.3",
    "documentation": "^13.2.5",
    "enquirer": "^2.3.6",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mocha": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-sonar": "^0.5.1",
    "eslint-plugin-sonarjs": "^0.7.0",
    "husky": "^6.0.0",
    "jscpd": "^3.3.25",
    "license-checker": "^25.0.1",
    "mocha": "^8.4.0",
    "mocha-junit-reporter": "^2.0.0",
    "node-gyp": "^8.1.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "release-it": "^14.6.2",
    "rimraf": "^3.0.2",
    "sonarqube-scanner": "^2.8.0",
    "typescript": "^4.2.4",
    "xmake": "^0.3.10"
  },
  "peerDependencies": {},
  "dependencies": {
    "bindings": "^1.5.0",
    "nan": "^2.14.2"
  }
}
